#!/usr/bin/env bash
# Automatically activate conda environment when entering this directory
# Requires direnv to be installed and configured

# Try to activate hpfracc-env first, then fracnn if that fails
if conda env list | grep -q "hpfracc-env"; then
    conda activate hpfracc-env
    echo "✅ Activated hpfracc-env environment"
elif conda env list | grep -q "fracnn"; then
    conda activate fracnn
    echo "✅ Activated fracnn environment"
else
    echo "❌ No conda environment found. Please create one using:"
    echo "   conda env create -f environment.yml"
    echo "   or"
    echo "   conda create -n hpfracc-env python=3.11"
fi

# Set project-specific environment variables
export PYTHONPATH="${PWD}:${PYTHONPATH}"
export HPFRACC_PROJECT_ROOT="${PWD}"
